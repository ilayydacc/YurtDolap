<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivDetayResim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvDetayBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Başlığı"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetayFiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 TL"
            android:textColor="#FFB74D"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Açıklama"
            android:textColor="#BBBBBB"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetayAciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün açıklaması burada yer alacak."
            android:textColor="#DDDDDD"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satıcı İletişim:"
            android:textColor="#BBBBBB"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetaySatici"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email@ornek.com"
            android:textColor="#90CAF9"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>