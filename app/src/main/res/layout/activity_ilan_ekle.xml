<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".IlanEkleActivity">

    <!-- TAM EKRAN DALGA / PATTERN -->
    <ImageView
        android:id="@+id/ivWaveFullIlanEkle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_wave_full"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ÜST BAŞLIK -->
    <TextView
        android:id="@+id/tvYeniIlanBaslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yeni İlan Ekle"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="18dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- İÇERİK -->
    <ScrollView
        android:id="@+id/svIlanEkle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvYeniIlanBaslik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CAM PANEL (şeffaf) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="26dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#33FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- FOTOĞRAF -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginBottom="14dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#22FFFFFF">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ivIlanResim"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#F5F5F5"
                                android:padding="50dp"
                                android:src="@android:drawable/ic_menu_camera"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:id="@+id/tvFotoSec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:text="Fotoğraf Seçmek İçin Tıkla"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ÜRÜN ADI -->
                    <EditText
                        android:id="@+id/etIlanAd"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Ürün Adı (Örn: Hesap Makinesi)"
                        android:background="@drawable/bg_input_glass"
                        android:paddingHorizontal="18dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#CCFFFFFF"
                        android:layout_marginBottom="12dp"/>

                    <!-- FİYAT -->
                    <EditText
                        android:id="@+id/etIlanFiyat"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Fiyat (TL)"
                        android:inputType="number"
                        android:background="@drawable/bg_input_glass"
                        android:paddingHorizontal="18dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#CCFFFFFF"
                        android:layout_marginBottom="12dp"/>

                    <!-- KATEGORİ -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="6dp"/>

                    <Spinner
                        android:id="@+id/spinnerKategori"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_glass" />

                    <!-- AÇIKLAMA -->
                    <EditText
                        android:id="@+id/etIlanAciklama"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Ürün Açıklaması (Durumu, özellikleri vb.)"
                        android:gravity="top|start"
                        android:background="@drawable/bg_input_glass"
                        android:padding="18dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#CCFFFFFF"
                        android:layout_marginBottom="16dp"/>

                    <!-- YAYINLA -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnIlanVer"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="İLANI YAYINLA"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_gradient_button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
